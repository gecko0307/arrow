module dlib.xml.node;

private
{
    import std.stdio;
}

final class XmlNode
{
    XmlNode parent;
    XmlNode[] children;
    dstring text = ""d;

    dstring name;   
    dstring[dstring] properties;
    
    this(dstring name, XmlNode parent = null)
    {
        this.name = name;
        this.parent = parent;
        if (parent !is null)
        {
            parent.addChild(this);
        }
    }

    XmlNode[] getChildByName(dstring name)
    {
        XmlNode[] res;
        foreach(n; children)
        {
            if (n.name == name)
                res ~= n;
        }
        return res;
    }
    
    void addChild(XmlNode node)
    {
        children ~= node;
    }
    
    void addProperty(dstring name, dstring value)
    {
        properties[name] = value;
    }
    
    dstring getText()
    {
        dstring res = text;
        foreach(n; children)
        {
            dstring txt = n.getText();
            res ~= txt;
        }
        return res;
    }

    private void printProperties(dstring indent = "")
    {
        if (properties.length)
        {
            foreach(k, v; properties)
                writeln(indent, k, " = ", v);
        }
    }
    
    void print(dstring indent = "")
    {
        printProperties(indent);
        
        foreach(n; children)
        {
            dstring nm = n.name;
            if (nm.length)
                writeln(indent, "tag: ", nm);
            else
                writeln(indent, "tag: <anonymous>");
                
            dstring txt = n.getText;
            if (txt.length)
                writeln(indent, "text: ", n.getText);
                
            n.print(indent ~ " ");
        }
    }
}
